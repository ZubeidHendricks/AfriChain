{
  "name": "verichain-x-hedera-service",
  "version": "2.0.0",
  "description": "VeriChainX Hedera Blockchain Service with Smart Contract Support",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "compile-contracts": "npx hardhat compile",
    "deploy-contracts": "npx hardhat run scripts/deploy.ts",
    "deploy-defi": "npx hardhat run scripts/deployDeFi.ts",
    "deploy-amm": "npx hardhat run scripts/deployAMM.ts",
    "deploy-bridge": "npx hardhat run scripts/deployBridge.ts",
    "compile-defi": "npx hardhat compile --config hardhat.config.ts",
    "compile-amm": "npx hardhat compile --config hardhat.config.ts",
    "compile-bridge": "npx hardhat compile --config hardhat.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bridge": "python3 tests/test_bridge_integration.py",
    "test:all": "npm run test && npm run test:bridge",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hedera-agent-kit": "^3.0.6",
    "langchain": "^0.2.20",
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "ethers": "^5.7.2",
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.19.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@hashgraph/sdk": "^2.49.0",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "zod": "^3.23.8",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "joi": "^17.11.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.10",
    "ethereum-waffle": "^4.0.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "blockchain",
    "hedera",
    "smart-contracts",
    "authenticity",
    "verification",
    "nft",
    "defi",
    "amm",
    "market-maker",
    "cross-chain",
    "bridge",
    "verichain-x"
  ],
  "author": "VeriChainX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/verichainx/verichain-x"
  },
  "bugs": {
    "url": "https://github.com/verichainx/verichain-x/issues"
  },
  "homepage": "https://verichainx.com"
}