{
  "version": 2,
  "name": "verichainx-api", 
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "ENVIRONMENT": "production",
    "DEBUG": "false", 
    "HACKATHON_MODE": "true"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  }
}