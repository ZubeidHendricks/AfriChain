{
  "version": 2,
  "name": "verichain-x-dashboard",
  "builds": [
    {
      "src": "src/frontend/admin-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://verichain-x-hedera.vercel.app",
    "VITE_WS_URL": "wss://verichain-x-hedera.vercel.app",
    "VITE_APP_NAME": "VeriChainX Dashboard",
    "VITE_APP_VERSION": "2.0.0"
  },
  "buildCommand": "cd src/frontend/admin-dashboard && npm install && npm run build",
  "outputDirectory": "src/frontend/admin-dashboard/dist",
  "installCommand": "cd src/frontend/admin-dashboard && npm install"
}